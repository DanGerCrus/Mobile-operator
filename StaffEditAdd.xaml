<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Operator.StaffEditAdd"
             Title="StaffEditAdd">
    <VerticalStackLayout HorizontalOptions="Center" VerticalOptions="Center">
        <VerticalStackLayout>
            <Label Text="Имя" WidthRequest="250"></Label>
            <Entry WidthRequest="250" x:Name="Name"></Entry>
            <Label Text="Фамилия" WidthRequest="250"></Label>
            <Entry WidthRequest="250" x:Name="LastName"></Entry>
            <Label Text="Отчество" WidthRequest="250"></Label>
            <Entry WidthRequest="250" x:Name="MiddleName"></Entry>
            
            
        </VerticalStackLayout>
        <HorizontalStackLayout Margin="0,10,0,0" >
            <Button x:Name="Save" WidthRequest="250" HeightRequest="28" Text="Сохранить" Padding="5" Margin="5,5,5,3" Clicked="Save_Clicked"></Button>
            <Button WidthRequest="250" HeightRequest="28" Text="Отменить" Padding="5" Margin="5,5,5,3" Clicked="OtmenaButton_Clicked"></Button>
        </HorizontalStackLayout>
    </VerticalStackLayout>
</ContentPage>